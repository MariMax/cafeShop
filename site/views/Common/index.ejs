<% layout('../layout') -%>

<script type="text/javascript">
    $(function () {
        function getUserCafe(userId) {
            $.post('/api/users/getcafe/' + userId)
        .done(function (data) {
            if (data && data.CellPhoneApprove)
                document.location.href = '/cafes/updateValues/' + data._id;
            else document.location.href = '/cafes/newcafe';
        })
        }
    
        function route() {
            var userId = $('#userId').val();
    
            if (userId != 'undefined') {
                getUserCafe(userId);
            }
        }
        route();
    })
</script>

<input type="text" name="userId" id="userId" value="<%=userId%>" hidden>