<% layout('../layout') -%>
<div class="admin_page">
    <div class="admin_content">
        <div class="admin_info">
            <h3 data-i18n="ApproveEmail.Header">Подтверждение email</h3>
            <form method="post" action="" class="horizontal">
                <div id ="messenger" style="display: none" class="notice succes" data-i18n="ApproveEmail.Approved">Email успешно подтвержден</div>
                <div id ="messenger1" style="display: none" class="notice error" data-i18n="ApproveEmail.Error">Не удалось подтвердить Email</div>
                <div class="form_item">
                    <div class="input"><input type="hidden" size="60" name="userId" value="<%= userId %>" required hidden></div>
                </div>
                <div class="form_item">
                    <div class="input"><input type="hidden" size="60" name="token" value="<%= token %>" required hidden></div>
                </div>
                <div class="form_item">
                    <div class="input"><input type="hidden" size="60" name="email" value="<%= email %>" required hidden></div>
                </div>
                <div class="form_but">
                    <a href="/users/login" class="button succes" data-i18n="ApproveEmail.Continue">Продолжить</a>  
                    <a href="/users/logout" class="button simple" data-i18n="ApproveEmail.Exit">Выйти</a>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/script/ApproveEmail.js" type="text/javascript"></script>
<script type="text/javascript">
   $(function () {
        i18n.init({ lng: lang, debug: false, resGetPath: '/locales/__lng__/__ns__.json' }, function () {
            $(".logo").i18n();
            $("title").i18n();
            $(".slogan").i18n();
            $(".admin_block").i18n();
          
            $(".admin_content").i18n();
           
        });
    });
</script>